.main-container
	.admin-page
		.row
			.span2
				= render "layouts/admin_nav"

			.span8
				#flash
					- flash.each do |name, msg|
						= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-#{name}"

				%h3 Edit key information

				= simple_form_for @key_input do |f|

					%fieldset

						.form-group.input-prepend
							%label{ :for => "key_input_rate" }
								%b Rate
							%span.add-on $
							= f.text_field :rate, :value => "%.2f" % (@key_input.rate / 100.0), :class => "form-control"

						.form-group.input-prepend
							%label{ :for => "key_input_pre_auth_amount" }
								%b Pre-authorization amount
							%span.add-on $
							= f.text_field :pre_auth_amount, :value => "%.2f" % (@key_input.pre_auth_amount / 100.0), :class => "form-control"

						.form-group
							%label{ :for => "key_input_warning" }
								%b Black screen warning about how we delete apps
							= f.text_area :warning, :value => @key_input.warning, :class => "form-control", :style => "width: 95%;"

						.form-group
							%label{ :for => "key_input_apple_id_password" }
								%b Apple ID password (for info@totablets.com)
							= f.text_field :apple_id_password, :value => @key_input.apple_id_password, :class => "form-control"

						.form-group
							%label{ :for => "key_input_terms_and_conditions" }
								%b Terms and conditions
							= f.text_area :terms_and_conditions, :value => @key_input.terms_and_conditions, :class => "form-control", :style => "width: 95%;"

						.submit-button
							%button.btn.btn-success{ :type => "submit" }
								Save