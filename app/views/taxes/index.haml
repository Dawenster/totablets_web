.main-container
	.admin-page
		.row
			.span2
				= render "layouts/admin_nav"

			.span8
				#flash
					- flash.each do |name, msg|
						= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-#{name}"

				%h3.admin-title All taxes

				.add-item
					%a{ :href => new_tax_path } + Add tax

				%table.table.table-striped
					%tr
						%th Name
						%th Rate
						%th Locations

					- @taxes.each do |tax|
						%tr
							%td
								%a{ :href => edit_tax_path(tax) }
									= tax.name
							%td
								= "#{tax.rate}%"
							%td
								= tax.locations.map{ |location| location.name }.join(", ")