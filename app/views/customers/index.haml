.main-container
	.admin-page
		.row
			.span2
				= render "layouts/admin_nav"

			.span8
				#flash
					- flash.each do |name, msg|
						= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-#{name}"

				%h3.admin-title All customers

				%table.table.table-striped
					%tr
						%th Name
						%th Email
						%th Rentals

					- @customers.each do |customer|
						%tr
							%td
								%a{ :href => customer_path(customer) }
									= customer.name
							%td
								= customer.email
							%td
								= customer.rentals.count